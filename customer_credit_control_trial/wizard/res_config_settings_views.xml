<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_cc_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.cc</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='catalog_setting_container']" position="after">
                <h2 groups="sales_team.group_sale_manager, account.group_account_manager">Customer Credit Control</h2>
                    <div class="row mt16 o_settings_container" name="customer_credit_control" groups="sales_team.group_sale_manager, account.group_account_manager">
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                               <p>Universal Customer Credit Control is disabled for trial version. How to get full
                               Customer Credit Control App? that you can find out by clicking on "How to Enable? Button.</p>
                            </div>
                        </div>
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <button name="%(action_warning_wizard)d" class="btn-primary" type="action" string="How to Enable?"/>
                            </div>
                        </div>

                        <div class="col-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_universal_credit_control" readonly="1"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_universal_credit_control"/>
                                <p>This Credit Control Setting applies to all Customers, Who doesn't have Credit Control configured.</p>
                            </div>
                        </div>
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="force_universal_credit_control" readonly="1"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="force_universal_credit_control"/>
                                <p>Force apply these credit control settings over settings done in partner form.</p>
                            </div>
                        </div>
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_amount_credit_limit" readonly="1"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_amount_credit_limit"/>
                                <p>Add Credit Control to Limit Amount of how much credit sales can be done to a Customer.</p>
                            </div>
                        </div>
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_days_credit_limit" readonly="1"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_days_credit_limit"/>
                                <p>Add Credit Control to Limit No. of Days how long a Customer can keep the amount due.</p>
                            </div>
                        </div>
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="credit_limit_amount" readonly="1"/>
                                <label for="credit_limit_amount"/>
                            </div>
                        </div>
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="credit_limit_days" readonly="1"/>
                                <label for="credit_limit_days"/>
                            </div>
                        </div>
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="amount_tolerance" readonly="1"/>
                                <label for="amount_tolerance"/>
                            </div>
                        </div>
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="days_tolerance" readonly="1"/>
                                <label for="days_tolerance"/>
                            </div>
                        </div>
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="email_from" readonly="1"/>
                                <label for="email_from"/>
                                <p>This user's email will be used to send warning email. For Universal and Partner Form, both Settings.</p>
                            </div>
                        </div>
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_warning" readonly="1"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_warning"/>
                                <p>Enable / Disable Warning emails along side their cofigurations.</p>
                            </div>
                        </div>
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="warning_amount" readonly="1"/>
                                <label for="warning_amount"/>
                            </div>
                        </div>
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="warning_days" readonly="1"/>
                                <label for="warning_days"/>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>

</odoo>
