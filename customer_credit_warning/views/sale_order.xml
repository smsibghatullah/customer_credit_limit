<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
     <record id="sale_form_inherit_accumulation" model="ir.ui.view">
      <field name="name">sale.form.inherit.accumulated</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">

          <xpath expr="//notebook" position="before">
              <group>
                  <group>
                      <field name="accumulated_debit"/>
                  </group>
              </group>


              <div attrs="{'invisible':[('accumulated_debit', '>=', 0)]}" style="color:#291048;margin:5px;font-weight:bold">
                  Minus sign means:- Partner balance is credit.

              </div>

          </xpath>

      </field>
  </record>
  </data>
</odoo>